@import '../../utils/weui.wxss';
.weui-navbar{
  background-color: #5DC2D0;
  border: none;
}
.weui-navbar__slider{
  width: 2em;
}
.weui-navbar__title{
  font-size: 32rpx;
}
page{
  height: 100%;
  background-color: #f0f0f0;
}
.page {
  height: 100%;
}

.list {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.list .list-half {
  width: 346rpx;
  box-sizing: border-box;
}

.list-half .poster {
  width: 100%;
  display: block;
}

.list-half .card {
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
}

.list-half .card .section {
  margin-top: 20rpx;
  padding-left: 20rpx;
}

.list-half .card .cate-info {
  display: flex;
}


.list-half .card .title {
  font-size: 34rpx;
}

.list-half .card .user-info {
  display: flex;
  align-items: center;
}

.list .card .user-info .user-name {
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
}

.list .card .user-info .user-name .data {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #808080;
  font-size: 24rpx;
}

.list .card .user-info .user-name .data .data-item {
  display: flex;
  align-items: center;
}
.padd-right20{
  padding-right: 20rpx;
}
.ace-item{
  padding: 10rpx 40rpx;
  border-top: 10rpx solid #dddddd; 
}
.intro-top{
  display: flex;
  align-items: center;
  border-bottom: 2rpx dashed #ccc;
  padding: 12rpx 0;
}
.intro-top .stu-name{
  font-size:28rpx;
}
.intro-top .stu-info{
  color:#808080;
  font-size:24rpx;
}
.ace-content{
  padding: 14rpx 0;
}
.ace-text{
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
}
.ace-text .ace-title{
  font-size: 32rpx;
  font-weight: bold;
}
.ace-img .img-item{
  width: 200rpx;
  height: 150rpx;
  border-radius: 10rpx;
  margin-right: 14rpx;
  display: inline-block;
}
.ace-img .img-item:last-child{
  margin-right:0;
}