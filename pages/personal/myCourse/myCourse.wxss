page {
  height: 100%;
}

.page {
  background-color: #f0f0f0;
  height: 100%;
}

.tab_content_item {
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
  background-color: #fff;
}

.tab_content_item .item-poster {
  width: 250rpx;
  height: 160rpx;
  border-radius: 20rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.tab_content_item .item-poster image {
  width: 100%;
  height: 100%;
}

.tab_content_item .item-info {
  color: #808080;
  font-size: 24rpx;
  flex: 1;
}

.tab_content_item .item-info .title {
  font-size: 32rpx;
  color: #000;
}

.tab_content_item .item-info .data {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tab_content_item .item-info .data .data-item {
  display: flex;
  align-items: center;
}

.tab_content_item .item-info .data .data-item-icon {
  margin-right: 8rpx;
}
