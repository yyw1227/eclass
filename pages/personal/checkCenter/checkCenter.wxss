.color-red{
    color: #f00;
    font-size: 30rpx;
    font-weight: bold;
}
.cate-info{
    display: flex;
}
.navbar{
    width: 500rpx;
    border: 2rpx solid #0287F2;
    margin: 40rpx auto;
    border-radius: 6rpx;
    color: #0287F2;
    display: flex;
    justify-content: space-between;
    font-size: 30rpx;
    line-height: 54rpx;
}
.navbar .tab{
    width: 50%;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
}
.navbar .tab.active{
    background-color: #0287F2;
    color: #fff;
}
.navbar .tab .count{
    font-size: 28rpx;
    width: 44rpx;
    height: 44rpx;
    line-height: 44rpx;
    border-radius: 22rpx;
    background-color: #eeeeee;
    text-align: center;
    color: #EA5550;
    margin-right: 10rpx;
}
.list-item{
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 28rpx;
    border-top: 10rpx solid #f0f0f0;
    padding-left: 20rpx;
}
.list-item .poster{
    width: 140rpx;
    height: 86rpx;
    border-radius: 10rpx;
    overflow: hidden;
}
.list-item .poster image{
    width: 100%;
    height: 100%;
}
.list-item .info{
    flex: 1;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    padding: 26rpx 10rpx;
}
.list-item .info .title{
    font-weight: bold;
    overflow:hidden;
    text-overflow:ellipsis;
    display:-webkit-box;
    -webkit-line-clamp:2;
    -webkit-box-orient:vertical;
    margin-bottom: 10rpx;
}
.list-item .info .comment-count{
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #808080;
}
.list-item .check{
    display: flex;
    align-items: center;
    background-color: #F8F8F8;
    align-self: stretch;
    color: #808080;
    padding: 0 30rpx;
}